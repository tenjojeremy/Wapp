{
  "name": "@tenjojeremy/wapp",
  "version": "1.4.0",
  "description": "Wapp - React Framework",
  "author": "Jeremy Tenjo <tenjojeremy@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node ./bin/index",
    "build": "node ./bin/index build",
    "analyze": "node ./bin/index analyze",
    "start:docs": "node ./bin/index docs",
    "build:docs": "node ./bin/index docs build",
    "deploy": "npm publish --minor && npm run build && firebase deploy && gpush",
    "prettify": "prettier \"**/*.js\" --write",
    "lint:fix": "eslint ./src --fix",
    "lint:check": "eslint ./src",
    "check-staged": "lint-staged"
  },
  "main": "./bin/index.js",
  "bin": {
    "wapp": "./bin/index.js"
  },
  "prettier": "@tenjojeremy/prettier-config",
  "eslintConfig": {
    "extends": "@tenjojeremy/eslint-config"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint:fix",
      "npm run pretty",
      "prettier --list-different"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.7.5",
    "@storybook/addon-docs": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@tenjojeremy/webpack-config": "^1.43.0",
    "chokidar": "^3.3.0",
    "concurrently": "^5.0.0",
    "convert-svg-to-png": "^0.5.0",
    "filehound": "^1.17.3",
    "firebase": "^7.3.0",
    "fs-extra": "^8.1.0",
    "get-my-local-ip": "^0.1.16",
    "glob": "^7.1.6",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "node-emoji": "^1.10.0",
    "pluralize": "^8.0.0",
    "shelljs": "^0.8.3",
    "svgo": "^1.3.2"
  },
  "devDependencies": {
    "@material-ui/core": "^4.7.0",
    "@tenjojeremy/eslint-config": "latest",
    "@tenjojeremy/prettier-config": "latest",
    "@tenjojeremy/web-toolkit": "^5.9.0",
    "babel-loader": "^8.0.6",
    "prettier": "1.19.1"
  }
}
